{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "preserve",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "types": [],
    "typeRoots": [],
    "lib": [
      "es2020"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}